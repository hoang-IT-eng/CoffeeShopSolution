@model IEnumerable<CoffeeShop.Models.Order>

<h1>Danh sách đơn hàng</h1>

<table class="table">
    <thead>
        <tr>
            <th>Bàn</th>
            <th>Thời gian</th>
            <th>Trạng thái</th>
            <th>Tổng tiền</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@(order.Table != null ? order.Table.Name : "Không xác định")</td>
                <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@order.Status</td>
                <td>@order.Total.ToString("C")</td>
                <td>
                    @if (order.Status == "New" || order.Status == "Processing")
                    {
                        <form asp-action="UpdateStatus" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@order.Id" />
                            <select name="status">
                                <option value="New" selected="@(order.Status == "New")">Mới</option>
                                <option value="Processing" selected="@(order.Status == "Processing")">Đang xử lý</option>
                                <option value="Completed">Hoàn thành</option>
                            </select>
                            <button type="submit" class="btn btn-primary">Cập nhật</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>